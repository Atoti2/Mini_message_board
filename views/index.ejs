<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <h1 class="text-2xl font-bold text-center"><%= title %></h1>
    <a class="text-center text-xl font-bold flex justify-center bg-slate-700 text-slate-200 w-fit m-auto rounded-md p-3 mt-5" href="/new" >Add message</a>
    <div class="flex justify-left mt-10 bg-slate-700 min-h-screen text-slate-200 p-10 rounded-lg">
      <ul>
        <% messages.forEach(function(message) { %>
          <li> 
            <strong >User: </strong><%= message.user%>
            <br> 
            <strong>Message: </strong><%= message.text %>
            <br>
            <strong>Date: </strong><%= message.added.toLocaleDateString()%> (<%=message.added.toLocaleTimeString()%>)
          </li>
          <br>
        <% }) %>
        </ul>
    </div>
  
  </body>
</html>
